<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//KO"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.khedu.fitroutine.member.mapper.MemberMapper">
    <select id="findMemberById" resultType="kr.co.khedu.fitroutine.member.model.vo.Member">
        SELECT *
        FROM TB_MEMBER
        WHERE MEMBER_ID = #{memberId}
    </select>
    <select id="getMemberProfile" resultType="kr.co.khedu.fitroutine.member.model.dto.MemberProfile">
        SELECT
            MEMBER_ID,
            EMAIL,
            NICKNAME,
            BIRTH_AT,
            PHONE,
            GENDER,
            HEIGHT,
            WEIGHT
        FROM TB_MEMBER
        JOIN TB_MEMBER_DETAIL USING (MEMBER_ID)
        WHERE MEMBER_ID = #{memberId}
    </select>
</mapper>