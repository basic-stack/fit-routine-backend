<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//KO"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.khedu.fitroutine.member.mapper.MemberMapper">
    <select id="selectMemberById" resultType="kr.co.khedu.fitroutine.member.model.dto.MemberResponse">
        SELECT
            EMAIL,
            NICKNAME,
            BIRTH_AT,
            PHONE,
            GENDER,
            HEIGHT,
            WEIGHT
        FROM TB_MEMBER
            JOIN TB_MEMBER_DETAIL USING (MEMBER_ID)
        WHERE MEMBER_ID = #{memberId}
    </select>
    <select id="selectMemberDetailById" resultType="kr.co.khedu.fitroutine.member.model.dto.MemberDetailResponse">
        SELECT
            WEIGHT,
            HEIGHT,
            BIRTH_AT,
            GENDER
        FROM TB_MEMBER
            JOIN TB_MEMBER_DETAIL USING (MEMBER_ID)
        WHERE MEMBER_ID = #{memberId}
    </select>
    <select id="selectMemberByEmail" resultType="kr.co.khedu.fitroutine.member.model.vo.Member">
        SELECT *
        FROM TB_MEMBER
        WHERE EMAIL = #{email}
    </select>
    <update id="updateMember" parameterType="kr.co.khedu.fitroutine.member.model.dto.MemberEditInfo">
        UPDATE TB_MEMBER
        <set>
            <if test="nickname != null">
                NICKNAME = #{nickname},
            </if>
            <if test="newPassword != null">
                PASSWORD = #{newPassword},
            </if>
            <if test="phone != null">
                PHONE = #{phone}
            </if>
        </set>
        WHERE MEMBER_ID = #{memberId}
    </update>
    <update id="updateMemberDetail" parameterType="kr.co.khedu.fitroutine.member.model.dto.MemberEditInfo">
        UPDATE TB_MEMBER_DETAIL
        <set>
            <if test="height != null">
                HEIGHT = #{height},
            </if>
            <if test="weight != null">
                WEIGHT = #{weight}
            </if>
        </set>
        WHERE MEMBER_ID = #{memberId}
    </update>
</mapper>